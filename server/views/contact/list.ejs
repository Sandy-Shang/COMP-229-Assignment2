<%-include ../Partials/head.ejs%> 

<%-include ../Partials/mainnav.ejs%>  
  

   <!-- Main Content -->
   <main class="container">
    <div class="row">
        <div class="jumbotron  offset-md-1 col-md-11">
            <h1 style="color:black">Business Contacts List</h1>

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/contact-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Contact</a>
            <% } %>
            <br>
            <table class=" table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-3">Contact Name</th>
                        <th class="text-center col-3">Email Address</th>
                        <th class="text-center col-2">Contact Number </th>


                    <% } else { %>
                        <th class="text-center col-3">Contact Name</th>
                        <th class="text-center col-3">Email Address</th>
                        <th class="text-center col-2">Contact Number </th>

                    <% } %>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-3"><%= ContactList[count].name %></td>
                            <td class="text-center col-3"><%= ContactList[count].email %></td>
                            <td class="text-center col-2"><%= ContactList[count].number %></td>          
                            <td class="text-center col-2">
                                <a href="/contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Update</a>
                            </td>
                            <td class="text-center col-2">
                                <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                         <% } else { %>
                            <td class="text-center col-3"><%= ContactList[count].name %></td>
                            <td class="text-center col-3"><%= ContactList[count].email %></td>
                            <td class="text-center col-2"><%= ContactList[count].number %></td>
 
                         <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  

  <%-include ../Partials/footer.ejs%>  
